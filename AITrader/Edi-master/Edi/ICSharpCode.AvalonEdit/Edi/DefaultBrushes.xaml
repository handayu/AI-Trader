<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:editing="clr-namespace:ICSharpCode.AvalonEdit.Editing">

  <SolidColorBrush x:Key="EditorCurrentLineBackgroundColor" Color="#2FAAADAE"/>
  <SolidColorBrush x:Key="EditorBackground" Color="#FFFFFFFF" />
  <SolidColorBrush x:Key="EditorForeground" Color="#FF000000" />
  <SolidColorBrush x:Key="EditorLineNumbersForeground" Color="#FFa0a0f0" />

  <!-- Style hyperlink displayed within text in text editor -->
  <SolidColorBrush x:Key="NonPrintableCharacterBrush" Color="#DF30307F"/>
  <SolidColorBrush x:Key="LinkTextForegroundBrush" Color="#FF4040FF"/>
  <SolidColorBrush x:Key="LinkTextBackgroundBrush" Color="#FFFFFFFF"/>
  <!-- End of Text Editor Brushes -->

  <!-- Text Editor Brushes -->
  <SolidColorBrush x:Key="EditorSelectionBrush" Color="#8080C0FF"/>
  <SolidColorBrush x:Key="EditorSelectionBorder" Color="#A080C0FF"/>
  <SolidColorBrush x:Key="EditorSelectionForeground" Color="#FF000000"/>

</ResourceDictionary>
